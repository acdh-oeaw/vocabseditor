server {
    listen 8020;
    server_name ${PROJECT_NAME}.sisyphos.arz.oeaw.ac.at;

    location /static/ {
        autoindex on;
        alias /opt/app/vocabseditor/staticfiles/;
    }

    location / {
        proxy_pass http://127.0.0.1:8010;
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
